-- Xmobar (http://projects.haskell.org/xmobar/)
-- Color scheme: Doom One

-- Dependencies
-- NotoSansMono Nerd Font Medium
-- Doom One Color Scheme

Config { font = "NotoSansMono Nerd Font Regular 10"
       , additionalFonts = []
       , borderColor = "black"
       , border = TopB
       , bgColor = "#282c34"
       , fgColor = "#bbc2cf"
       , alpha = 255
       -- Position TopSize and BottomSize take 3 arguments:
       --   an alignment parameter (L/R/C) for Left, Right or Center.
       --   an integer for the percentage width, so 100 would be 100%.
       --   an integer for the minimum pixel height for xmobar, so 24 would force a height of at least 24 pixels.
       --   NOTE: The height should be the same as the trayer (system tray) height.
       , position = TopSize L 100 19
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       -- Let window status be fixed.
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [Run Cpu ["-L","3","-H","50",
                     "--normal","green","--high","red"] 10
                             -- cpu core temperature monitor
                    , Run CoreTemp [ "--template" , "Temp: <core0>°C"
                                   , "--Low"      , "70"        -- units: °C
                                   , "--High"     , "80"        -- units: °C
                                   , "--low"      , "lightgreen"
                                   , "--normal"   , "lightorange"
                                   , "--high"     , "lightred"
                                   ] 50
                    , Run Com "/home/fredrik/.local/bin/wireless.sh" [] "wifi" 50
		    , Run Com "/home/fredrik/.local/bin/audio.sh" [] "audio" 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Com "echo" ["\xf17c"] "penguin" 3600
                    , Run Com "uname" ["-s","-r"] "" 36000
                    , Run Date "%a %b %d %Y %H:%M:%S" "date" 10
                    , Run Battery [ "--template" , "Batt: <acstatus>"
                             , "--Low"      , "10"        -- units: %
                             , "--High"     , "80"        -- units: %
                             , "--low"      , "darkred"
                             , "--normal"   , "darkorange"
                             , "--high"     , "lightgreen"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "<left>% (<timeleft>)"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#dAA520>Charging</fc>"
                                       -- charged status
                                       , "-i"	, "<fc=lightgreen>Charged</fc>"
                       ] 50
                     , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% <fc=#666666>|</fc> <box type=Bottom width=2 mb=2 color=#ecbe7b><fc=#ecbe7b>%cpu%</fc></box> <fc=#666666>|</fc> %coretemp% <fc=#666666>|</fc> <box type=Bottom width=2 mb=2 color=#ff6c6b><fc=#ff6c6b>%memory%</fc></box><fc=#666666>|</fc> <box type=Bottom width=2 mb=2 color=#f49ac2><fc=#f49ac2>%wifi%</fc></box>}{ <box type=Bottom width=2 mb=2 color=#ee82ee><fc=#ee82ee>%audio%</fc></box><fc=#666666>|</fc> <box type=Bottom width=2 mb=2 color=#ee9a00><fc=#ee9a00>%date%</fc></box> <fc=#666666>|</fc> <box type=Bottom width=2 mb=2>%penguin% %uname%</box> <fc=#666666>|</fc> %battery% "
}

